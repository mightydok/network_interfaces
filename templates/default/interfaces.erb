<% if @hotplug -%>
allow-hotplug <%= @device %>
<% end %>
iface <%= @device %> <%= @family %> <%= @type %>
<% if @address -%>
  address <%= @address %>
<% end %>
<% if @netmask -%>
  netmask <%= @netmask %>
<% end %>
<% if @broadcast -%>
  broadcast <%= @broadcast %>
<% end %>
<% if @gateway -%>
  gateway <%= @gateway %>
<% end %>
<% if @vlan_dev -%>
  vlan_raw_device <%= @vlan_dev %>
<% end %>
<% if @bridge_ports -%>
  bridge_ports<% @bridge_ports.each do |port| %> <%= port %><% end %>
<% end %>
<% unless @bridge_stp.nil? -%>
  bridge_stp <%= @bridge_stp ? "on" : "off" %>
<% end %>
<% if @bond_slaves -%>
  bond-slaves<% @bond_slaves.each do |iface| %> <%= iface %><% end %>
<% end %>
<% if @bond_mode -%>
  bond-mode <%= @bond_mode %>
<% end %>
<% if @metric -%>
  metric <%= @metric %>
<% end %>
<% if @mtu -%>
  mtu <%= @mtu %>
<% end %>
<% @up_down_cmd.each do |order, cmds| -%>
<%   cmds.flatten.each do |cmd| -%>
  <%= order %> <%= cmd %>
<%   end %>
<% end %>
<% if @custom %>
<% @custom.sort_by{ |instruc, command| instruc }.each do |instruc, command| -%>
        <%= instruc %> <%= command %>
<% end %>
<% end %>

